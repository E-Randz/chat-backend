{
  "name": "chat-backend",
  "version": "1.0.0",
  "description": "",
  "main": "app.js",
  "scripts": {
    "prettier-format": "prettier --config .prettierrc 'src/**/*.ts' --write",
    "lint": "eslint . --ext .ts",
    "test": "NODE_ENV=test mocha -r ts-node/register 'src/spec/**/*.spec.ts'",
    "build": "rimraf ./build && tsc",
    "start:dev": "cross-env NODE_ENV=dev nodemon",
    "start:test": "cross-env NODE_ENV=test nodemon",
    "start:prod": "npm run build && cross-env NODE_ENV=prod node build/server.js",
    "knex": "node -r esm node_modules/.bin/knex",
    "make:migrate:dev": "knex migrate:make --knexfile src/knexfile.ts -x ts --env development",
    "migrate:latest:dev": "NODE_ENV=dev knex migrate:latest --knexfile src/knexfile.ts ts --env development",
    "migrate:rollback:dev": "NODE_ENV=dev knex migrate:rollback --knexfile src/knexfile.ts ts --env development",
    "seed:make:dev": "NODE_ENV=dev knex seed:make --knexfile src/knexfile.ts -x ts --env development"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "@types/cors": "^2.8.6",
    "@types/express": "^4.17.7",
    "@types/faker": "^4.1.12",
    "@types/node": "^14.0.26",
    "@types/supertest": "^2.0.10",
    "@typescript-eslint/eslint-plugin": "^3.7.1",
    "@typescript-eslint/parser": "^3.7.1",
    "chai": "^4.2.0",
    "chai-http": "^4.3.0",
    "eslint": "^7.5.0",
    "eslint-config-prettier": "^6.11.0",
    "eslint-plugin-prettier": "^3.1.4",
    "faker": "^4.1.0",
    "husky": "^4.2.5",
    "mocha": "^8.0.1",
    "nodemon": "^2.0.4",
    "prettier": "^2.0.5",
    "rimraf": "^3.0.2",
    "sinon": "^9.0.2",
    "supertest": "^4.0.2",
    "ts-node": "^8.10.2",
    "typescript": "^3.9.7"
  },
  "dependencies": {
    "@types/mocha": "^8.0.0",
    "cors": "^2.8.5",
    "cross-env": "^7.0.2",
    "dotenv": "^8.2.0",
    "express": "^4.17.1",
    "knex": "^0.21.2",
    "pg": "^8.3.0"
  }
}
